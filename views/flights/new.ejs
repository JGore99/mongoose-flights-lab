<%- include("../partials/html-head.ejs")  %> 
<%- include("../partials/nav.ejs")  %> 
<main>
  <h1><%= title %> </h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline</label>
    <select name="airline" id="airline-input">
      <option disabled hidden selected></option>
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>

    <label for="airport-input">Airport</label>
    <select name="airport" id="airport-input">
      <option disabled hidden selected></option>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>

    <label for="flight-number-input">Flight Number</label>
    <input name="flightNo" id="flight-number-input">

    <label for="departs-input">Departure Date / Time</label>
    <input type="datetime-local" name="departs" id="departs-input">
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include("../partials/footer.ejs")  %> 